  <p>Bu an sadece bizim.</p>
</div>

<script>
let scene = 1;

function nextScene() {
  document.getElementById("s" + scene).classList.remove("active");
  scene++;
  document.getElementById("s" + scene).classList.add("active");
}

function accept() {
  document.getElementById("s4").classList.remove("active");
  document.getElementById("s5").classList.add("active");
  hearts();
}

function hearts() {
  for (let i = 0; i < 70; i++) {
    const h = document.createElement("div");
    h.className = "heart";
    h.innerText = "❤️";
    h.style.left = Math.random() * window.innerWidth + "px";
    h.style.top = Math.random() * window.innerHeight + "px";
    document.body.appendChild(h);
    setTimeout(() => h.remove(), 2000);
  }
}

// GÜN SAYISI
const start = new Date("2024-11-07");
const now = new Date();
const diff = Math.floor((now - start) / (1000*60*60*24));
document.getElementById("days").innerText =
  diff + " gündür birlikteyiz (ve daha yeni başlıyoruz)";
</script>

